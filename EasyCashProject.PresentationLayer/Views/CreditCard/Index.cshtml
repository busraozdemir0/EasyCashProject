@model List<ListCreditCardDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                @if (Model.Count != 0)
                {
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Kredi Kartlarım</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>

                        <div class="x_content">
                            <div class="table-responsive">
                                <table class="table table-striped jambo_table bulk_action">
                                    <thead>
                                        <tr class="headings">
                                            <th class="column-title">Banka Şubesi </th>
                                            <th class="column-title">Hesap Numarası / IBAN </th>
                                            <th class="column-title">CVC </th>
                                            <th class="column-title">Son Kullanma Tarihi </th>
                                            <th class="column-title">Hesap Bakiyesi </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var account in Model)
                                        {
                                            <tr class="even pointer">
                                                <td class=" ">@account.BankBranch</td>
                                                <td class=" ">@account.CreditCardNumber</td>
                                                <td class=" ">@account.CVC </td>
                                                <td class=" ">@account.ExpirationDate</td>
                                                <td class=" ">@account.CreditCardBalance</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="x_panel">
                        <h2>Aktif bir kredi kartı hesabınız bulunmamaktadır.</h2>
                    </div>
                }
            </div>
        </div>
    </div>
</div>