                                    <div class="icon">
                                        <i class="fa fa-dollar"></i>
                                    </div>
                                    <div class="count">@ViewBag.UsdToTry</div>

                                    <h3>Dolar - TL</h3>
                                    <p>Güncel $ - ₺ Kuru</p>
                                </div>
                            </div>
