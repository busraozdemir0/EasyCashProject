                                    <div class="icon">
                                        <i class="fa fa-check-square-o"></i>
                                    </div>
                                    <div class="count">@ViewBag.UsdToEur</div>

                                    <h3>Dolar - Euro</h3>
                                    <p>Güncel $ - € Kuru</p>
                                </div>
                            </div>
